<h4>Post details:</h4>
<br/>
<p>
	<%= @row['Content'] %>
	<br/>
	<br/>
	<small style="color: #999">Added by: <%=@row['Username']%> at: <%=@row['Creation_date']%></small>
</p>
<hr/>
<br/>
<h4>Comments:</h4>
<br/>
<% @comments.each do |row| %>
	<p>
		<%= row['Content'] %>
		<br/>
		<small style="color: #999">Added at: <%= row['Creation_date'] %></small>
		<br/>
	</p>
	<hr/>
<% end %>

<p>
	<form action="/details/<%=@row['Id']%>" method="post">
	  <div class="form-group">
	    <textarea name="content" class="form-control" rows="3" placeholder="Type comment text here"></textarea>
	  </div>
	  <button type="submit" class="btn btn-primary">Add comment</button>
	</form>
</p>